<script src='https://www.google.com/jsapi'></script>
<div class="container">
  <header>
    <h2>
      <%= t(".heading", :organization_name => @decorated_organization.name) %>
    </h2>
  </header>
  <ul class="organization-dashboard-overview">
    <li class="organization-dashboard-overview-item">
      <span class="count">
        <%= @decorated_organization.survey_count %>
      </span>
      <p class="label">
        <%= Survey.model_name.human.pluralize(@decorated_organization.survey_count) %>
      </p>
    </li>
    <li class="organization-dashboard-overview-item">
      <span class="count">
        <%= @decorated_organization.response_count %>
      </span>
      <p class="label">
        <%= Response.model_name.human.pluralize(@decorated_organization.response_count) %>
      </p>
    </li>
    <li class="organization-dashboard-overview-item">
      <span class="count">
        <%= @decorated_organization.user_count %></span>
      <p class="label">
        <%= t("activerecord.models.user").pluralize(@decorated_organization.user_count) %>
      </p>
    </li>
    <li>
      <span class="count">
        <%= @decorated_organization.asset_space_in_words %>
      </span>
      <p class="label">
        <%= t(".asset_space") %>
      </p>
    </li>
  </ul>
  <div class="organization-dashboard-graphs">
    <div class="organization-dashboard-graphs-item" id="organization-dashboard-graphs-survey">
      <%= render_chart @decorated_organization.surveys_per_month_graph, 'organization-dashboard-graphs-survey' %>
    </div>
    <div class="organization-dashboard-graphs-item" id="organization-dashboard-graphs-response">
      <%= render_chart @decorated_organization.responses_per_month_graph, 'organization-dashboard-graphs-response' %>
    </div>
  </div>
</div>